{
  "src_folders": ["tests"],
  "output_folder": "reports",
  "custom_commands_path": "",
  "custom_assertions_path": "",
  "page_objects_path": "pages",
  "globals_path": "globals.js",

  "selenium": {
    "start_process": true,
    "server_path": "lib/bin/selenium.jar",
    "log_path": "reports",
    "host": "localhost",
    "port": 4444,
    "cli_args": {
      "webdriver.chrome.driver": "",
      "webdriver.gecko.driver": "",
      "webdriver.edge.driver": ""
    }
  },

  "test_settings": {
    "default": {
      "launch_url": "localhost",
      "selenium_port": 4444,
      "selenium_host": "localhost",
      "silent": true,
      "screenshots": {
        "enabled": false,
        "path": "reports/screenshots"
      },
      "desiredCapabilities": {
        "browserName": "firefox",
        "marionette": true,
        "javascriptEnabled": true,
        "acceptSslCerts": true
      }
    },

    "chrome": {
      "desiredCapabilities": {
        "browserName": "chrome"
      }
    },

    "edge": {
      "desiredCapabilities": {
        "browserName": "MicrosoftEdge"
      }
    }
  }
}
